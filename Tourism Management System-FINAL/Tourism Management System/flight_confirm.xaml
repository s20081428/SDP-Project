<Window x:Class="Tourism_Management_System.flight_confirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Flight Booking Confirmation" Height="505.426" Width="819.036" Loaded="Window_Loaded" Icon="Images/Backup-icon.png" SizeChanged="Window_SizeChanged">
    <Viewbox Stretch="Uniform">
        <Grid Margin="0,0,2,2" Height="438" Width="748">
            <Grid.Background>
                <ImageBrush ImageSource="Images/background/bg_watermark.jpg" Opacity="0.185"/>
            </Grid.Background>
            <TextBox x:Name="txt_cust" HorizontalAlignment="Left" Height="35" Margin="547,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159" FontSize="17" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" />
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="26,25,0,0" TextWrapping="Wrap" Text="Flight Booking Confirmation" VerticalAlignment="Top" Height="35" Width="336" FontSize="22" TextDecorations="{x:Null}"/>
            <Label x:Name="label" Content="Customer ID" HorizontalAlignment="Left" Margin="429,25,0,0" VerticalAlignment="Top" Height="35" Width="113" FontSize="17"/>
            <TextBox x:Name="txt_total" HorizontalAlignment="Left" Height="38" Margin="559,353,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <Label Content="Total fee (with Tax):" HorizontalAlignment="Left" Margin="410,357,0,0" VerticalAlignment="Top" Width="147" FontSize="15"/>
            <Label Content="Flight No" HorizontalAlignment="Left" Margin="31,201,0,0" VerticalAlignment="Top" Width="74" />
            <TextBox x:Name="txt_flightNo" HorizontalAlignment="Left" Height="23" Margin="109,203,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <Label Content="Derpat Date" HorizontalAlignment="Left" Margin="316,200,0,0" VerticalAlignment="Top" Height="26" Width="83"/>
            <TextBox x:Name="txt_departDate" HorizontalAlignment="Left" Height="23" Margin="399,203,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <Label Content="Class" HorizontalAlignment="Left" Margin="31,247,0,0" VerticalAlignment="Top" Width="73"  />
            <TextBox x:Name="txt_Class" HorizontalAlignment="Left" Height="23" Margin="109,248,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <Label Content="Person" HorizontalAlignment="Left" Margin="97,292,0,0" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
            <TextBox x:Name="txt_person_Adult" HorizontalAlignment="Left" Height="23" Margin="98,318,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
