            <TextBox x:Name="txt_bookingID" HorizontalAlignment="Left" Height="23" Margin="109,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <Label Content="Derpat Time" HorizontalAlignment="Left" Margin="316,247,0,0" VerticalAlignment="Top" Height="25" Width="83"/>
            <TextBox x:Name="txt_departTime" HorizontalAlignment="Left" Height="23" Margin="399,248,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <Label Content="Order Date" HorizontalAlignment="Left" Margin="316,154,0,0" VerticalAlignment="Top" Height="25" Width="83"/>
            <TextBox x:Name="txt_orderDate" HorizontalAlignment="Left" Height="23" Margin="399,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <Label Content="Adult" HorizontalAlignment="Left" Margin="30,314,0,0" VerticalAlignment="Top" Width="63"/>
            <TextBox x:Name="txt_person_Child" HorizontalAlignment="Left" Height="23" Margin="98,349,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <Label Content="Child" HorizontalAlignment="Left" Margin="30,345,0,0" VerticalAlignment="Top" Width="63"/>
            <TextBox x:Name="txt_person_Infant" HorizontalAlignment="Left" Height="23" Margin="98,380,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <Label Content="Infant" HorizontalAlignment="Left" Margin="30,376,0,0" VerticalAlignment="Top" Width="63"/>
            <Label Content="Price" HorizontalAlignment="Left" Margin="245,292,0,0" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="txt_price_Adult" HorizontalAlignment="Left" Height="23" Margin="246,318,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <TextBox x:Name="txt_price_Child" HorizontalAlignment="Left" Height="23" Margin="246,349,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <TextBox x:Name="txt_price_Infant" HorizontalAlignment="Left" Height="23" Margin="246,380,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True"/>
            <Button x:Name="btn_print" Content="Print" HorizontalAlignment="Left" Margin="599,203,0,0" VerticalAlignment="Top" Width="101" Click="btn_print_Click" Height="38"/>
            <TextBox x:Name="txt_from" HorizontalAlignment="Left" Height="39" Margin="187,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" FontSize="18" Foreground="Blue"/>
            <TextBox x:Name="txt_To" HorizontalAlignment="Left" Height="39" Margin="431,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" IsReadOnly="True" FontSize="18" Foreground="Red"/>
            <Label x:Name="label1" Content="→" HorizontalAlignment="Left" Margin="339,67,0,0" VerticalAlignment="Top" Height="66" Width="81" FontSize="60" FontFamily="Microsoft YaHei UI" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>

        </Grid>
    </Viewbox>
</Window>
